{
    "name": "signpostmarv/brick-math-base-convert-gmp",
    "description": "Arbitrary Base Conversion Library (GMP)",
    "type": "library",
    "keywords": [
        "Brick",
        "Math",
        "Arbitrary Base Conversion",
        "GMP"
    ],
    "license": "MIT",
	"config": {
		"classmap-authoritative": true,
		"sort-packages": true
	},
    "require": {
        "php": "^7.4",
        "ext-gmp": "*",
        "signpostmarv/brick-math-base-convert": "dev-master"
    },
    "require-dev": {
        "maglnet/composer-require-checker": "^2.0",
        "php-coveralls/php-coveralls": "^2.2",
        "phpunit/phpunit": "^8.5",
        "povils/phpmnd": "^2.1",
        "psalm/plugin-phpunit": "dev-master",
        "roave/security-advisories": "dev-master",
        "sebastian/phpcpd": "^4.1",
        "signpostmarv/php-cs-fixer-config": "^0.14.0",
        "symfony/console": "^4.4",
        "vimeo/psalm": "^3.8"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/SignpostMarv/brick-math-base-convert.git"
        }
    ],
	"conflict": {
		"vimeo/psalm": "<3.8"
    },
    "scripts": {
        "tests": [
            "psalm --show-info=false",
            "phpcpd src tests",
            "phpmnd ./ --exclude=build --exclude=./vendor/ --non-zero-exit-on-violation --hint",
			"php-cs-fixer fix --verbose --dry-run --diff-format=udiff",
            "composer-require-checker check ./composer.json",
            "phpunit -vvvv"
        ]
    },
    "autoload": {
        "psr-4": {
            "SignpostMarv\\Brick\\Math\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SignpostMarv\\Brick\\Math\\Tests\\": [
                "./tests/",
                "./vendor/signpostmarv/brick-math-base-convert/tests/"
            ]
        }
    }
}
